<gcard>
<option name="DBHOST" value="eicdb"/>
<option name="DATABASE" value="test"/>
<option name="DBUSER" value="eicuser"/>
<option name="DBPSWD" value="iloveeic"/>

<detector name="meic_det1" factory="TEXT" variation="Original"/>

<option name="INTEGRATEDRAW" value="flux"/>

<option name="PHYSICS" value="QGSP_BERT+STD+Optical"/>
<option name="RECORD_PASSBY" value="1"/>
<option name="HALL_MATERIAL" value="Vacuum"/>

<option name="MAX_X_POS" value="100000"/>
<option name="MAX_Y_POS" value="100000"/>
<option name="MAX_Z_POS" value="100000"/>
<option name="HALL_DIMENSIONS" value="0.5*m,0.5*m,0.5*m"/>

<option name="BEAM_P"   value="mu-, 9*GeV, 0*rad, 0*deg"/>
<option name="SPREAD_P" value="0*GeV,0*deg,0*deg"/>

<option name="BEAM_V"   value="(0, 0, 0)m"/>

<option name="SPREAD_V" value="(0.,0)cm"/>

<option name="USE_GUI"  value="0"/>
<option name="SAVE_ALL_MOTHERS" value="1"/>

<option name="N" value="100000"/>    <!-- Total simulated events, changed by L. Xue from 1 to 100 -->
<option name="NGENP"  value="100"/>   <!-- Add by Liang for number of events recorded -->
<option name="OUTPUT" value="evio,output_By3T9GeV100000MuHF0.5mRich.evio"/>  <!-- changed by L. Xue from "txt" to "evio" -->

<option name="RECORD_MIRRORS" value="1"/>
<option name="RECORD_PASSBY" value="1"/>

<option name="FIELD_DIR" value="field"/>
<option name="HALL_FIELD" value="By3T"/>

<option name="EXEC_MACRO" value="vis.mac"/>
</gcard>

